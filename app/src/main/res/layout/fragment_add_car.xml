<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_add_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:text="Select car brand:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_car_brand"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageAuto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/noauto" />
    </LinearLayout>


    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        style="@style/TagGroup"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        app:atg_backgroundColor="#77B2D8"
        app:atg_borderColor="#77B2D8"
        app:atg_checkedBackgroundColor="#77B2D8"
        app:atg_checkedBorderColor="#77B2D8"
        app:atg_isAppendMode="false"
        app:atg_textColor="#FFFFFF"
        app:atg_textSize="15sp"
        app:atg_verticalPadding="3sp"
        app:atg_verticalSpacing="5sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:text="Select car model:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:text="About car:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_car_description"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:text="Main car:"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbLeft"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_left_selector"
            android:button="@color/trans_green"
            android:checked="true"
            android:gravity="center"
            android:text="YES"
            android:textColor="@color/colorWhite" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbRight"
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:layout_weight="1"

            android:background="@drawable/radio_button_right_selector"
            android:button="@color/trans_green"
            android:checked="false"
            android:gravity="center"
            android:text="NO"
            android:textColor="@color/mainBlue" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_save"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_save"
            android:text="update"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/car_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:text="cancel"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:text="cancel"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />


        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_delete"
            android:text="delete"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:layout_width="4dp"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>